<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         id="JoomlaExtensionNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="com.schmeedy.pdt.joomla.core.project.impl.JoomlaExtensionProjectNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.php.core.PHPNature">
      </requires-nature>
      <builder
            id="com.schmeedy.pdt.joomla.core.extensionbuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            id="com.schmeedy.pdt.joomla.core.ExtensionManifest"
            name="Joomla! Extension Manifest"
            priority="low">
         <describer
               class="com.schmeedy.pdt.joomla.core.project.impl.JoomlaExtensionManifestContentTypeDescriber">
         </describer>
      </content-type>
      <content-type
            base-type="com.schmeedy.pdt.joomla.core.ExtensionManifest"
            id="com.schmeedy.pdt.joomla.core.ComponentExtensionManifest"
            name="Joomla! Component Manifest"
            priority="normal">
         <describer
               class="com.schmeedy.pdt.joomla.core.project.impl.JoomlaExtensionManifestContentTypeDescriber">
            <parameter
                  name="type"
                  value="component">
            </parameter>
         </describer>
      </content-type>
      <content-type
            base-type="com.schmeedy.pdt.joomla.core.ExtensionManifest"
            id="com.schmeedy.pdt.joomla.core.ModuleExtensionManifest"
            name="Joomla! Module Manifest"
            priority="normal">
         <describer
               class="com.schmeedy.pdt.joomla.core.project.impl.JoomlaExtensionManifestContentTypeDescriber">
            <parameter
                  name="type"
                  value="module">
            </parameter>
         </describer>
      </content-type>
      <content-type
            base-type="com.schmeedy.pdt.joomla.core.ExtensionManifest"
            id="com.schmeedy.pdt.joomla.core.PluginExtensionManifest"
            name="Joomla! Plug-in Manifest"
            priority="normal">
         <describer
               class="com.schmeedy.pdt.joomla.core.project.impl.JoomlaExtensionManifestContentTypeDescriber">
            <parameter
                  name="type"
                  value="plugin">
            </parameter>
         </describer>
      </content-type>
      <content-type
            base-type="com.schmeedy.pdt.joomla.core.ExtensionManifest"
            id="com.schmeedy.pdt.joomla.core.TemplateExtensionManifest"
            name="Joomla! Template Manifest"
            priority="normal">
         <describer
               class="com.schmeedy.pdt.joomla.core.project.impl.JoomlaExtensionManifestContentTypeDescriber">
            <parameter
                  name="type"
                  value="template">
            </parameter>
         </describer>
      </content-type>
   </extension>
   <extension point="org.eclipse.emf.ecore.generated_package">
      <package
            uri="http://schmeedy.com/pdt/joomla/server"
            class="com.schmeedy.pdt.joomla.core.server.cfg.JoomlaServerConfigurationPackage"
            genModel="model/server-configuration.genmodel"/>
      <package
            class="com.schmeedy.pdt.joomla.core.project.model.JoomlaProjectModelPackage"
            genModel="model/project-model.genmodel"
            uri="http://schmeedy.com/pdt/joomla/project/model">
      </package>
   </extension>
   <extension
         point="org.eclipse.dltk.core.buildpathContainerInitializer">
      <buildpathContainerInitializer
            class="com.schmeedy.pdt.joomla.core.project.buildpath.impl.JoomlaBuildpathContainerInitializer"
            id="com.schmeedy.pdt.JoomlaAPI">
      </buildpathContainerInitializer>
   </extension>
   <extension
         id="extensionbuilder"
         name="Joomla! Extension Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="com.schmeedy.pdt.joomla.core.project.builder.JoomlaExtensionProjectBuilder">
         </run></builder>
   </extension>

</plugin>
